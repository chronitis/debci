<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class='page-header'>Status <small>/ Platform-Specific issues</small></h1>
      <%= @status_nav %>
      <table class='table table-striped'>
        <tr>
          <th>Package</th>
          <th>Status</th>
        </tr>
        <% @issues.each do |package, statuses| %>
          <% pkg = Debci::Package.new(package) %>
          <tr>
            <td><%= package %></td>
            <td>
              <% statuses.each do |status| %>
                <a  class='<%= status.extended_status %> <%= if pkg.outdated?(status) then "outdated" end %>'
                    href="/packages/<%= pkg.prefix %>/<%= package %>/<%= status.suite %>/<%= status.architecture %>/">
                  <%= status.version %> <%= status.suite %>/<%= status.architecture%> <%= status.status %> (<%= status.duration_human %>)
                </a>
                &nbsp;
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
