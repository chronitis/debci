<div class="container">
<div class="row">
<div class="col-md-4">
<div class="panel panel-default">
    <div class="panel-heading">News<a class="pull-right" href="data/feeds/all-packages.xml" title='Atom feed for events in all packages'><span class='fa fa-rss'></span></a></div>
    <div class="list-group">
        <%
           repository = Debci::Repository.new
           TOTAL_ITEMS = 10

           news = repository.news_for('*', TOTAL_ITEMS)

           # List the latest changes in package status
           news.each do |item|
         %>
               <a href="/packages/<%= repository.find_package(item.package).prefix %>/<%= item.package %>/<%= item.suite %>/<%= item.architecture %>"
                  class="list-group-item <%= item.status %>"><%= item.headline %><div><small class="text-muted"><%= item.date %> | <strong><%= item.time %></strong></small></div></a>
         <% end %>

    </div> <!-- class='list-group' -->
</div> <!-- class='panel panel-default' -->
</div> <!-- class='col-md-3' -->

<div class="col-md-7">
  <% package_prefix = (('0'..'9').to_a + ('a'..'z').to_a + ('liba'..'libz').to_a).sort %>

    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-6"><h3>Packages</h3></div>
      <div class="col-md-5"></div>
    </div>

    <div class="row">
      <div class="col-md-1"></div>

      <div class="col-md-6">
        <h4 class="page-header">Browse by prefix</h4>
        <ul class="list-inline">

          <% package_prefix.each do |prefix| %>
               <li><h5><a href="/packages/<%= prefix %>"><%= prefix %></a></h5></li>
          <% end %>

        </ul>
      </div>

      <div class="col-md-5">
        <h4 class="page-header">Search</h4>
          <form method="post" action="/search">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Search packages (regex welcome)">
              <span class="input-group-btn">
                <button class="btn" type="submit">Search</button>
              </span>
            </div>
          </form>
      </div> <!-- class='col-md-5' -->
    </div> <!-- class='row' -->
</div> <!-- class='col-md-7' -->

</div> <!-- class='row' -->
</div> <!-- class='container' -->
