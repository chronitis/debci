<div class="container">
<div class="row">
<div class="col-md-3">
<div class="panel panel-default">
    <div class="panel-heading">News</div>
    <div class="list-group">
        <%
           repository = Debci::Repository.new
           package = repository.packages
           newsItems = 0
           TOTAL_ITEMS = 10

           # List the latest changes in package status
           package.each do |thisPackage|

               news = repository.find_package(thisPackage).news

               news.each do |item|

                   if item.headline.include?("PASSED")
                       state = "pass"
                   else
                       state = "fail"
                   end

                   newsItems += 1
         %>
                   <a href="/history/<%= item.suite %>/<%= item.architecture %>/<%= thisPackage[0] %>/<%= thisPackage %>"
                      class="list-group-item <%= state %>"><%= item.headline %></a>

         <%        break
               end

               if newsItems.eql?(TOTAL_ITEMS)
                   break
               end
           end
         %>

    </div> <!-- class='list-group' -->
</div> <!-- class='panel panel-default' -->
</div> <!-- class='col-md-3' -->


<div class="col-md-9">
<div id='main'>
<div id='status'>
    <div class="panel panel-default">
        <div class="panel-heading">Package Testing Data</div>

            <div class='row'>
                <div class='col-md-6'>
                    <h3>Pass/fail</h3>
                        <div class='chart' id='chart-pass-fail'>
                            <noscript>Can't plot chart without Javascript.</noscript>
                        </div>
                </div>

                <div class='col-md-6'>
                    <h3>Pass percentage</h3>
                        <div class='chart' id='chart-pass-percentage'>
                            <noscript>Can't plot chart without Javascript.</noscript>
                        </div>
                </div>
            </div>
        </div> <!-- class='panel panel-default' -->
     </div> <!-- id='status'-->
</div> <!-- id='main' -->
</div> <!-- class='col-md-9' -->

</div> <!-- class='row' -->
</div> <!-- class='container' -->
