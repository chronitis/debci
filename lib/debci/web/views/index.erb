<div class="container">
<div class="row">
<div class="col-md-3">
<div class="panel panel-default">
    <div class="panel-heading">News</div>
    <div class="list-group">
        <%
           repository = Debci::Repository.new
           TOTAL_ITEMS = 10

           news = repository.news_for('*', TOTAL_ITEMS)

           # List the latest changes in package status
           news.each do |item|
         %>
               <a href="/packages/<%= item.package %>/<%= item.suite %>/<%= item.architecture %>"
                  class="list-group-item <%= item.status.to_s %>"><%= item.headline %></a>
         <% end %>

    </div> <!-- class='list-group' -->
</div> <!-- class='panel panel-default' -->
</div> <!-- class='col-md-3' -->

<div class="col-md-9">
<div id='main'>
<div id='status'>
    <div class="panel panel-default">
        <div class="panel-heading">Package Testing Data</div>

            <div class='row'>
                <div class='col-md-6'>
                    <h3>Pass/fail</h3>
                        <div class='chart' id='chart-pass-fail'>
                            <noscript>Can't plot chart without Javascript.</noscript>
                        </div>
                </div>

                <div class='col-md-6'>
                    <h3>Pass percentage</h3>
                        <div class='chart' id='chart-pass-percentage'>
                            <noscript>Can't plot chart without Javascript.</noscript>
                        </div>
                </div>
            </div>
        </div> <!-- class='panel panel-default' -->
     </div> <!-- id='status'-->
</div> <!-- id='main' -->
</div> <!-- class='col-md-9' -->

</div> <!-- class='row' -->
</div> <!-- class='container' -->
