#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@ --with systemd

override_dh_clean:
	dh_clean --dirs-only
	$(RM) debian/debci.debhelper.log
	$(RM) debian/debci.substvars
	$(RM) debian/files

override_dh_installinit:
	@true

override_dh_systemd_start:
	dh_systemd_start
	dh_systemd_start -p debci-collector debci-generare-index.path
