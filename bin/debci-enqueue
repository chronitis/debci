#!/bin/sh

set -eu

usage() {
  cat <<EOF
usage: debci enqueue [PKG [PKG ...]]

$@
EOF
}

debci_base_dir=$(readlink -f $(dirname $(readlink -f $0))/..)
. $debci_base_dir/lib/environment.sh
. $debci_base_dir/lib/functions.sh

prepare_args

amqp_queue="${debci_suite}-${debci_arch}-${debci_backend}"
for pkg in $@; do
  amqp-publish --url ${debci_amqp_server} --persistent -r $amqp_queue --body $pkg
  report_status "$pkg" "requested"
done
