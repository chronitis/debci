#!/usr/bin/make -f

packages = $(shell ./scripts/list-dep8-packages)
start := $(shell date +%s)

.PHONY: $(packages)

all: $(packages)
	@./scripts/cleanup
	@finish=$$(date +%s); \
		./scripts/generate-index $$(($$finish - $(start)))

$(packages):
	@if test -t 1; then echo $@ ; fi
	@logger -t debci -i "started processing package $@"
	@./scripts/process-package $@
	@logger -t debci -i "finished processing package $@"
